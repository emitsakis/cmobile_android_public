<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/data_collection_parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
        <TextView
                android:id="@+id/data_collection_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data collection"
                android:textSize="16sp"
                android:textFontWeight="bold"
                android:textColor="@color/primary_blue"
        />
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:layout_below="@+id/data_collection_title" android:layout_marginTop="8dp">
            <TextView android:id="@+id/data_collection_description"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Enable"
                      android:textSize="14sp"
                      android:textColor="@color/blackColor"
                      android:layout_centerVertical="true"/>

            <Switch
                    android:id="@+id/data_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:checked="true"
                    android:theme="@style/SCBSwitch"/>
        </RelativeLayout>

    </RelativeLayout>
    <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            android:layout_below="@id/data_collection_parent"/>

</RelativeLayout>